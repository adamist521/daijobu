<p id="notice"><%= notice %></p>

<h1>Listing Troubles</h1>

<div class="entry_button" style="float: right">
  <%= link_to 'サインイン', "/users/sign_in", method: :get %>
</div>


<div class="entry_button" style="float: right">
  <%= link_to 'サインアウト', "/users/sign_out", method: :delete %>
</div>


<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Counselor</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @troubles.each do |trouble| %>
      <tr>
        <td><%= trouble.user_id %></td>
        <td><%= trouble.counselor_id %></td>
        <td><%= trouble.content %></td>
        <td><%= link_to 'Show', trouble %></td>
        <td><%= link_to 'Edit', edit_trouble_path(trouble) %></td>
        <td><%= link_to 'Destroy', trouble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trouble', new_trouble_path %>
